generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  nombre    String
  email     String   @unique
  password  String
  role      Role     @default(SECRETARIA)
  createdAt DateTime @default(now())
  turnos    Turno[]  @relation("TurnosDeOdontologo") // ðŸ‘ˆ relaciÃ³n inversa
}

model Paciente {
  id        Int      @id @default(autoincrement())
  nombre    String
  dni       String   @unique
  telefono  String?
  createdAt DateTime @default(now())
  turnos    Turno[]  @relation("TurnosDePaciente") // ðŸ‘ˆ relaciÃ³n inversa
}

enum Role {
  ADMIN
  ODONTOLOGO
  SECRETARIA
}

model Turno {
  id     Int      @id @default(autoincrement())
  fecha  DateTime
  motivo String?
  estado Estado   @default(PENDIENTE)

  pacienteId Int
  paciente   Paciente @relation("TurnosDePaciente", fields: [pacienteId], references: [id])

  odontologoId Int
  odontologo   User @relation("TurnosDeOdontologo", fields: [odontologoId], references: [id])

  createdAt DateTime @default(now())
}

enum Estado {
  PENDIENTE
  CONFIRMADO
  CANCELADO
}
